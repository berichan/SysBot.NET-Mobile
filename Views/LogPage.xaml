<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SysBot.NET_Mobile.Views.LogPage"
             Title="{Binding Title}">

    <StackLayout Margin="20">
        <Label Text="SysBot Logs"
               FontSize="Medium"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <ScrollView Rotation="180" VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Rotation="180" Text="{Binding LogData}" />
            </StackLayout>
        </ScrollView>
    </StackLayout>
    
</ContentPage>